    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    d:DesignHeight="1200"
    shell:SystemTray.IsVisible="True">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="#FFEDEDED" FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10,10,2,613.89" Grid.RowSpan="2">
            <TextBlock Style="{StaticResource PhoneTextNormalStyle}" Foreground="#FF333333" Text="בעצמי" Margin="39,0,371,0"/>
            <TextBlock Text="סיפור הצלחה" Margin="10,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}" Foreground="#FF333333"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,114.22,12,-0.22">
            <ScrollViewer Padding="6">
                <StackPanel>
                    <TextBlock FontFamily="Segoe UI" FontSize="20" LineHeight="36" TextWrapping="Wrap" >
        		<Run Foreground="#FF333333" FontWeight="Bold" Text="אין כמו לשמוע על חלומות שמתגשמים!!"/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="קבלו כמה מילים מתוך מכתב תודה מאוד מרגש"/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="מאחת המשתתפות שלנו"/>
        		<Span Foreground="#FF333333">
        			<Run Text=":"/>
        		</Span>
        		<Span Foreground="#FF333333">
        			<LineBreak/>
        			<Run/>
        		</Span>
        		<LineBreak/>
        		<Span Foreground="#FF333333">
        			<Run Text="&quot;אתמול נרשמתי ללימודים במכללה, והיום נהגתי "/>
        		</Span>
        		<LineBreak/>
        		<Span Foreground="#FF333333">
        			<Run Text="לראשונה בחיי- שני דברים שלפני פחות משנה,"/>
        		</Span>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="רק חלמתי לעשות, ולא הייתה לי האפשרות לבצע,"/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="והנה, החלום מתחיל להתגשם. "/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="בתקופה שהייאוש גבר על החלום, פתחתם בפניי עולם "/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="חדש שלם, ואני נרגשת ומצפה לבאות! היום אני מבינה "/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="שהחיים שלי מתחלקים לשני חלקים, לפני ואחרי "/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="שהתחלתי את התוכנית."/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text=" אני מודה לכל אחד ואחת מכם, ששמתם לעצמכם "/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="מטרה מקודשת זו, לעזור ולהעצים נשים, גברים, "/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="אימהות ואבות על מנת שישפרו את תנאי העסקתם "/>
        		<LineBreak/>
        		<Run Foreground="#FF333333" Text="ואת הכנסתם, ובכך ישפרו את כל חייהם.&quot;"/>
        		<LineBreak/>
        		<Run/>
                    </TextBlock>
                    <Image Source="/Assets/sipur2.jpg" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
